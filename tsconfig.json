{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": [ "es6", "dom" ]
    },
    "include": [
        "src/**/*" 
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
